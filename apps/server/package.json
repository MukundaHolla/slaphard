{
  "name": "@slaphard/server",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "dist/main.js",
  "types": "dist/main.d.ts",
  "scripts": {
    "dev": "tsx src/main.ts",
    "build": "tsc -p tsconfig.json",
    "start": "tsx src/main.ts",
    "test": "vitest run",
    "db:migrate": "tsx src/db/migrate.ts",
    "db:reset": "tsx src/db/reset.ts",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write 'src/**/*.ts'"
  },
  "dependencies": {
    "@slaphard/engine": "workspace:*",
    "@slaphard/shared": "workspace:*",
    "fastify": "^5.6.0",
    "ioredis": "^5.8.1",
    "pg": "^8.16.3",
    "pino": "^9.9.5",
    "pino-pretty": "^13.1.2",
    "socket.io": "^4.8.1",
    "uuid": "^13.0.0",
    "zod": "^4.1.8"
  },
  "devDependencies": {
    "@types/pg": "^8.15.5",
    "@types/node": "^24.5.2",
    "socket.io-client": "^4.8.1",
    "tsx": "^4.20.5",
    "vitest": "^3.2.4"
  }
}
