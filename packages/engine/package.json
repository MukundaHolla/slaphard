    "lint": "eslint src test --ext .ts",
    "format": "prettier --write 'src/**/*.ts' 'test/**/*.ts'"
  },
  "dependencies": {
    "@slaphard/shared": "workspace:*"
  },
  "devDependencies": {
    "vitest": "^3.2.4"
  }
}
